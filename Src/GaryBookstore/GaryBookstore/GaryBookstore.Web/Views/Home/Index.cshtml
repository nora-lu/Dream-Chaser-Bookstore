@model List<GaryBookstore.Web.Entities.Book>
@{
    ViewBag.Title = "Home Page";
}

<style type="text/css">
    h1.welcome {
        font-size: 55px;
    }
    ul {
        list-style-image:none
    }
    li.book-list {
        list-style-position:inside;
        width:180px;
        display: inline-block;
        /*float:left;*/
        white-space:nowrap;
        overflow:hidden;
        text-overflow:ellipsis;
        margin-bottom:10px;
    }
</style>

<div class="jumbotron">
    <h1 class="welcome">Welcome to Dream Chaser's Bookstore!</h1>
    <p class="lead">Dream Chaser's Bookstore is a great place for finding your favorite book and buy it.</p>
    <p>@Html.ActionLink("View All Books", "ViewBooks", new { controller = "Book", pageNumber = 1 }, new { @class = "btn btn-primary btn-lg" }) &raquo;</p>
</div>

